{
  "name": "figma-builder-exporter-agent",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"relay/**/*.js\" \"plugin/**/*.js\"",
    "format": "prettier -w .",
    "docker:build": "docker build -f relay/Dockerfile -t ${RELAY_IMAGE:-figma-relay:local} .",
    "docker:up": "docker compose --profile prod up -d",
    "docker:up:dev": "docker compose --profile dev up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f relay"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.2"
  }
}
